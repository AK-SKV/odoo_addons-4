<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_expense_register_payment_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.expense.register.payment.wizard_form</field>
            <field name="model">hr.expense.register.payment.wizard</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_register_payment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//group//group//field[@name='communication']" position="after">
                    <field name="cash_id"/>
                </xpath>

                <xpath expr="//form//sheet//group//group//div[@name='amount_div']" position="after">
                    <field name="amount_total_price" string="实际支付" />
                    <field name="account_diff_id"
                           string="差异科目"/>
                </xpath>

                <xpath expr="//form//sheet//group//group//div//field[@name='amount']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>