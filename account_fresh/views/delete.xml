<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="action_delete_value_act_window_view" model="ir.ui.view">
            <field name="type">form</field>
            <field name="name">delete.data_form</field>
            <field name="model">delete.data</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,finish"/>
                    </header>
                    <group>
                        <group>
                            <field name="delete_name"
                                   string="订单号"
                                   states="draft,finish"
                                   attrs="{'readonly':[('state','=','finish')]}"/>
                            <field name="delete_type"
                                   string="订单类型"
                                   states="draft,finish"
                                   attrs="{'readonly':[('state','=','finish')]}"/>
                        </group>
                        <group>
                            <button string="删除"
                                    type="object"
                                    states="draft"
                                    name="delete_data"
                                    class="oe_highlight"/>
                        </group>
                    </group>

                </form>
            </field>
        </record>

        <record id="action_delete_value_act_window" model="ir.actions.act_window">
            <field name="name">delete.data.action</field>
            <field name="res_model">delete.data</field>
            <field name="view_mode">form,tree</field>
        </record>

        <record id="action_delete_value_act_window" model="ir.actions.act_window">
            <field name="name">删除订单</field>
            <field name="res_model">delete.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_delete_data"
                  name="删除管理"
                  parent="account.menu_finance_configuration"
                  sequence="327" />

        <menuitem id="menu_delete_value"
                  name="订单删除"
                  parent="menu_delete_data"
                  action="action_delete_value_act_window"/>

    </data>
</odoo>